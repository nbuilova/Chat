<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<VBox alignment="center" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sample.Controller">

    <stylesheets>
        <URL value="@/css/style.css"/>
    </stylesheets>

    <TextArea fx:id="textArea" focusTraversable="false" minHeight="330.0" minWidth="400.0" editable="false">
        <VBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="10.0"/>
        </VBox.margin>
    </TextArea>
    <HBox>
        <TextField fx:id="textField" onAction="#sendMsg" prefHeight="35.0" prefWidth="340"
                   promptText="Type your message here" >
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="5.0" top="5.0"/>
            </HBox.margin>
        </TextField>
        <Button onAction="#sendMsg" prefHeight="35.0" prefWidth="160" text="Send message">
            <HBox.margin>
                <Insets bottom="10.0" left="5.0" right="10.0" top="5.0"/>
            </HBox.margin>
        </Button>
    </HBox>


</VBox>
